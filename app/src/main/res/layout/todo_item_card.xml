<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp"
    android:background="@drawable/todo_item_background"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/todo_item_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="#1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginHorizontal="30dp">
        <TextView
            android:id="@+id/todo_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Go to school"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="3dp"/>


        <TextView
            android:id="@+id/todo_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="17-04-2023"
            android:textColor="@color/black" />
    </LinearLayout>


    <CheckBox
        android:id="@+id/todo_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_vertical" />


</LinearLayout>